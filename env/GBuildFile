		$"curl -L https://github.com/UltraOS/Hyper/releases/download/v0.1.0/hyper_install-linux-x86_64 --output ./hyper_install && chmod +x ./hyper_install";
		#exit 0;
	}

	$"echo \"Can't recognize argument " + arg1 + "\"" &;
	#exit 1;
}


